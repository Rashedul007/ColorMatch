<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.usefullittleappproduction.palettestudio"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="25" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <uses-feature android:name="android.hardware.camera2.full" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name="com.usefullittleappproduction.palettestudio.Helpers.App"
        android:allowBackup="false"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Transparent" >
        <activity android:name="com.usefullittleappproduction.palettestudio.Activities.LoginActivity" />
        <activity android:name="com.usefullittleappproduction.palettestudio.Activities.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.usefullittleappproduction.palettestudio.Activities.ImagePickerActivity" />
        <activity android:name="com.usefullittleappproduction.palettestudio.Activities.ColorPickerActivity" />
        <activity android:name="com.usefullittleappproduction.palettestudio.Activities.PaletteListActivity" />
        <activity android:name="com.usefullittleappproduction.palettestudio.Activities.PaletteDetailsActivity" />
        <activity android:name="com.usefullittleappproduction.palettestudio.Activities.ColorMatchingActivity" />
        <activity android:name="com.usefullittleappproduction.palettestudio.Activities.ColorListFromImageActivity" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.usefullittleappproduction.palettestudio.provider"
            android:exported="false"
            android:grantUriPermissions="true" >
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/shared_file_paths" />
        </provider>

        <activity android:name="com.usefullittleappproduction.palettestudio.Activities.CustomCameraActivity" />
        <activity android:name="com.usefullittleappproduction.palettestudio.Activities.CallingCameraActivity" />
        <activity android:name="com.usefullittleappproduction.palettestudio.Activities.Camera2Activity" />
        <activity android:name="com.usefullittleappproduction.palettestudio.Activities.About" />
        <activity android:name="com.usefullittleappproduction.palettestudio.Activities.Support" />
        <activity android:name="com.usefullittleappproduction.palettestudio.Activities.SharingActivity" />
    </application>

</manifest>