<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.CallingCameraActivity" >

    <ImageView
        android:id="@+id/camera_image_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:gravity="center" >

        <Button
            android:id="@+id/capture_image_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/start_image_capture"
            android:background="@drawable/btn_blue"
            android:padding="0dp"
            android:layout_margin="2dp"
            android:onClick="btnOnClick" />

        <Button
            android:id="@+id/save_image_new_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/save_image_new"
            android:background="@drawable/btn_blue"
            android:padding="0dp"
            android:layout_margin="2dp"
            android:onClick="btnOnClick" />

        <Button
            android:id="@+id/save_image_existing_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/save_image_existing"
            android:background="@drawable/btn_blue"
            android:padding="0dp"
            android:layout_margin="2dp"
            android:onClick="btnOnClick"  />


    </LinearLayout>

</LinearLayout>