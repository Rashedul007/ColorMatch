<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_white"
    android:weightSum="3">


    <FrameLayout
        android:id="@+id/lyout_camera_holder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:layout_weight="2">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:alpha="0.5"
            android:drawableTop="@mipmap/ic_back"
            android:gravity="left|top"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:background="@drawable/customroundbutton"/>

       <com.simplelifesolutions.palettestudio.Helpers.AutoFitTextureView
            android:id="@+id/textureVw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"  />

    </FrameLayout>


    <FrameLayout
        android:id="@+id/lyout_colorvwOnCamera"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.simplelifesolutions.palettestudio.Helpers.ZoomableImageView
            android:id="@+id/zoomimgvw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>



        <android.support.design.widget.FloatingActionButton
            android:id="@+id/takepic_button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="end"
            android:src="@drawable/ic_cam3"/>

    </FrameLayout>

</LinearLayout>