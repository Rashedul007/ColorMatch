<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    tools:context=".Activities.ImagePickerActivity">

    <ImageView
        android:id="@+id/imgVw"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

<!--    <Button
        android:id="@+id/btnAddToNewPallete"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/customroundbutton"
        android:drawableTop="@mipmap/ic_input_add"
        android:onClick="buttonOnClick"
        android:layout_gravity="bottom|center_horizontal"
        android:textSize="12sp"
        android:layout_weight="4"
        android:layout_marginBottom="10dp"/>-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:gravity="center" >

        <Button
            android:id="@+id/recapture_image_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/customroundbutton"
            android:drawableTop="@mipmap/ic_camera"
            android:padding="0dp"
            android:layout_margin="2dp"
            android:onClick="buttonOnClick" />


        <Button
            android:id="@+id/btnAddToNewPallete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/customroundbutton"
            android:drawableTop="@mipmap/ic_input_add"
            android:padding="0dp"
            android:layout_margin="2dp"
            android:onClick="buttonOnClick" />


    </LinearLayout>

</LinearLayout>